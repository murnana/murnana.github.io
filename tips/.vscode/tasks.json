{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
    },
    "promptOnClose": true,
    "isBackground": false,
    "windows": {
        "options": {
            "shell": {
                "executable": "C:\\Windows\\System32\\cmd.exe",
                "args": [
                    "/c"
                ]
            }
        }
    },
    "tasks": [
        {
            "label": "make html",
            "type": "process",
            "windows": {
                "command": "${workspaceFolder}\\make.bat",
                "args": [
                    "html"
                ]
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "make livehtml",
            "type": "process",
            "windows": {
                "command": "${workspaceFolder}\\make.bat",
                "args": [
                    "livehtml"
                ]
            },
            "group": "build",
            "promptOnClose": false,
            "isBackground": true,
            "presentation": {
                "reveal": "silent",
                "focus": false,
                "showReuseMessage": false,
            },
            "problemMatcher": []
        }
    ]
}