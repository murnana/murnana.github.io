{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Make HTML",
            "type": "shell",
            "command": "make html",
            "windows": {
                "command": ".\\make html",
                "options": {
                    "env": {
                        "PATH": "${workspaceFolder}/.venv/Scripts;${env:PATH};",
                        "PIPENV_VENV_IN_PROJECT": "${workspaceFolder}/.venv"
                    }
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}