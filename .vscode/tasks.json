{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "develop",
      "type": "npm",
      "script": "develop",
      "group": "build",
      "isBackground": true,
      "dependsOn": ["format", "clean"],
      "problemMatcher": ["$eslint-compact"]
    },
    {
      "label": "format",
      "type": "npm",
      "script": "format",
      "problemMatcher": ["$eslint-compact"]
    },
    {
      "label": "clean",
      "type": "npm",
      "script": "clean",
      "problemMatcher": []
    },
    {
      "label": "production",
      "command": "gatsby",
      "args": ["build"],
      "group": "build",
      "dependsOn": ["format", "clean"],
      "problemMatcher": []
    },
    {
      "label": "serve",
      "command": "gatsby",
      "args": ["serve"],
      "dependsOn": ["build production"],
      "problemMatcher": []
    }
  ]
}
